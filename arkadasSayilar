public class arkadasSayilar {

	public static void main(String[] args) {
		// Birinin bölenlerinin toplamı diğerine, onun bölenleri de diğerine eşitse arkadaş sayıdır (220-284 gibi)
		
		// (&&) ve demek
		// (||) ya da demek

		
		 int sayi1=220;
		 int sayi2=284;
		 int toplam1=0;
		 int toplam2=0;
		 
		 for(int i=1;i<sayi1;i++) {
			 if(sayi1%i==0) {
				 toplam1 = toplam1 +i;
			 }
		 }
		 
		 for(int i=1;i<sayi2;i++) {
			 if(sayi2%i==0) {
				 toplam2 = toplam2 +i;
			 }		 
	}
		 //ayrı ayrı if açmak yerine &&(ve) kullanılarak yan yana yazılabilir, iki koşulda sağlanıyosa anlamına gelir
		 
if (sayi1==toplam2 && sayi2 ==toplam1) {
	System.out.println("bu iki sayi arkadastir");
}else {
	System.out.println("bu iki sayi arkadas degildir");
}
}
}
